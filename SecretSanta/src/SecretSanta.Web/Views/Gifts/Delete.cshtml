@model Gift

<form asp-controller="Gifts" asp-action="DeleteGift" asp-route-id="@Model.Id">
    
    <div class="field">
        <label class="label" asp-for="Title">Title</label>
        <div class="control">
            <input class="input" type="text" asp-for="Title" disabled />
        </div>
    </div>
    <div class="field">
        <label class="label" asp-for="Description">Description</label>
        <div class="control">
            <input class="input" type="text" asp-for="Description" disabled/>
        </div>
    </div>
    <div class="field">
        <label class="label" asp-for="Url">Url</label>
        <div class="control">
            <input class="input" type="text" asp-for="Url" disabled />
        </div>
    </div>
    <div class="field">
        <label class="label" asp-for="UserId">User Id</label>
        <div class="control">
            <input class="input" type="text" asp-for="UserId" disabled />
        </div>
    </div>
    <div class="field is-grouped">
        <div class="control">
            <button class="button is-primary">Delete</button>
        </div>
        <div class="control">
            <a asp-action="Index" class="button is-light">Cancel</a>
        </div>
    </div>
</form>

