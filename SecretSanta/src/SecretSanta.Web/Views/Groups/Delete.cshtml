@model Group

<form asp-controller="Groups" asp-action="DeleteGroup" asp-route-id="@Model.Id">
    <div class="field">
        <label class="label" asp-for="Title"></label>
        <div class="control">
            <input class="input" type="text" asp-for="Title" disabled />
        </div>
    </div>
    <div class="field is-grouped">
        <div class="control">
            <button id="submit" class="button is-primary">Delete</button>
        </div>
        <div class="control">
            <a asp-action="Index" class="button is-light">Cancel</a>
        </div>
    </div>
</form>

